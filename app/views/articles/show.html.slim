.row
  .small-8.large-centered.columns
    fieldset.panel
      h2.article-title = article_presenter.formated_title
      p.article-text = simple_format(article_presenter.text)
      span.article-info
      = article_presenter.publication_info
      p.button-group
      - if article_presenter.created_by?(current_user)
        span &nbsp
        = link_to 'Edit', edit_article_path(article_presenter.id), class: 'small button'
      = link_to 'Back', articles_path, class: 'small button'
    .panel
      = render 'comments/form', article: article
      - article.comments.each do |comment|
        = render 'comments/comment', comment: comment
